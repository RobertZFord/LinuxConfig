#!/bin/sh

STATUS=$(cat /sys/class/power_supply/AC/online)
# if $STATUS is 1, it's AC, so return POW to STDOUT, otherwise...

if [ $STATUS -eq 1 ]
then
	printf "POW"
else
	CHARGENOW=$(cat /sys/class/power_supply/BAT0/charge_now)
	CHARGEFULL=$(cat /sys/class/power_supply/BAT0/charge_full)
	let ADJ=$CHARGENOW*100
	let PERCENT=$ADJ/$CHARGEFULL
	printf "%+3s" $PERCENT
fi
